
user www-data www-data;

# https://stackoverflow.com/a/56631458
events {
    worker_connections  1024; # usually 1024 is a good default
}

rtmp {
    server {
        listen 1935;

        chunk_size 4096;

        # TV mode: one publisher, many subscribers
        application stream {

            # enable live streaming
            live on;

            # Only publish to local network
            allow publish $X_DOCKER_IP;
            deny publish all;
            deny play all;

            # Record
            recorder all {
                record all;
                record_path /var/www/rec;
                record_unique on;
                record_suffix -%d-%b-%y-%T.flv;
                exec_record_done ffmpeg -i $path -f mp4 /var/www/video/$basename.mp4;
                exec_record_done ffmpeg -i $path -q:a 5 /var/www/audio/$basename.mp3;
            }

            # HLS
            hls on;
            hls_path /tmp/hls;
            hls_nested on;
            hls_fragment 10s;
            hls_playlist_length 30s;
        }
    }
}

# HTTP can be used for accessing RTMP stats
http {
    server {
        listen 8080;

        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin * always;

        root /tmp/hls/;

        location /hls {
            types {
                application/vnd.apple.mpegurl m3u8;
            }
            alias /tmp/hls;
        }

        location /video {
            alias /var/www/video;
            autoindex on;
        }

        location /audio {
            alias /var/www/audio;
            autoindex on;
        }
    }

    server {
        listen 80;

        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin * always;

        root /var/www;

        location / {

            index player.html;
        }
    }

    server {
        listen 8888;

        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin * always;

        root /var/www/;

        location /stat {
            rtmp_stat all;
            rtmp_stat_stylesheet /var/www/stat.xsl;
        }

        location /stat.xsl {
        }
    }
}
